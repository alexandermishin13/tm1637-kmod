/dts-v1/;
/plugin/;

/ {
    compatible = "allwinner,sun8i-h2-plus";
};

&pio {
    tm1637_pins: tm1637_pins {
	allwinner,pins = "PC4", "PC7";
	allwinner,function = "gpio_out"; // out (initially)
    };
};

&{/soc} {
    tm1637@0 {
	compatible = "tm1637";
	pinctrl-names = "default";
	pinctrl-0 = <&tm1637_pins>;
	gpios = <&pio 2 4 0
	         &pio 2 7 0>;
	scl = <0>; // PC4 (16)
	sda = <1>; // PC7 (18)
	status = "okay";
    };
};
